                        </Grid.RowDefinitions>

                        <!--  Name in the first row  -->
                        <TextBlock
                            Grid.Row="0"
                            Text="{Binding Name}"
                            TextWrapping="Wrap" />

                        <!--  Severity in the second row, right-aligned  -->
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock Text="Severity: " TextWrapping="Wrap" />
                            <TextBlock Text="{Binding Severity}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Expander.Header>
                <Grid>
