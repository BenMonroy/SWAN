                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text=" Severity: " />
                        <TextBlock Text="{Binding Severity}" />
                    </StackPanel>
                </Expander.Header>
                <Grid>
                    <DataGrid AutoGenerateColumns="False" Height="Auto" Margin="5" ItemsSource="{Binding PhysicalControls}" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Physical Control" Binding="{Binding Control}" Width="2*" IsReadOnly="True"/>
                            <DataGridTemplateColumn  Header="Passed" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Passed}" HorizontalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
