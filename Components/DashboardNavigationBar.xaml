<UserControl x:Class="SWAN.Components.DashboardNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWAN"
             xmlns:viewmodels="clr-namespace:SWAN.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="800"
             Background="{StaticResource CardBackgroundColor}">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="btn" TargetType="{x:Type Button}">
                <Setter Property="Width" Value="90"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Border.CornerRadius" Value="10,10,0,0"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Foreground" Value= "WhiteSmoke" />
                <Setter Property="FontFamily" Value="Baskerville,Georgia"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="{TemplateBinding Border.CornerRadius}" 
                        Background="{StaticResource CardBackgroundColor}" BorderBrush="#ccc" 
                        BorderThickness="1,2,1,0" >
                                <ContentPresenter x:Name="contentPresenter" 
                                      ContentTemplate="{TemplateBinding ContentTemplate}" 
                                      Content="{TemplateBinding Content}" 
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      Margin="{TemplateBinding Padding}" 
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Column definitions for buttons and tilte/icon -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40.59"/>
            <ColumnDefinition Width="49.41"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--Buttons, title, and icon-->

        <TextBlock Grid.Column="1" Text="SWAN" VerticalAlignment="Center" Foreground="WhiteSmoke" FontFamily="Baskerville, Georgia" FontSize="45" Grid.ColumnSpan="2" Margin="0,0,306,0"/>
        <Button Grid.Column="3" Content="Index" Style="{StaticResource btn}" Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.IndexView}" Grid.ColumnSpan="2" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="5" Content="Dashboard" Style="{StaticResource btn}" Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.RMFDashboardView}" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="6" Content="Risk Score" Style="{StaticResource btn}" Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.RiskScoreView}" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="7" Content="History" Style="{StaticResource btn}"  Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.HistoryView}" Margin="0,40,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
