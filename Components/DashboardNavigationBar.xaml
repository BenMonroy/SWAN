<UserControl x:Class="SWAN.Components.DashboardNavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWAN"
             xmlns:viewmodels="clr-namespace:SWAN.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:ScaffoldViewModel}"
             d:DesignHeight="80" d:DesignWidth="800"
             Background="#2E333A">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="btn" TargetType="{x:Type Button}">
                <Setter Property="Width" Value="90"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Border.CornerRadius" Value="10,10,0,0"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Foreground" Value= "WhiteSmoke" />
                <Setter Property="FontFamily" Value="Baskerville,Georgia"/> 
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="{TemplateBinding Border.CornerRadius}" 
                        Background="#2E333A" BorderBrush="#ccc" 
                        BorderThickness="1,2,1,0" >
                                <ContentPresenter x:Name="contentPresenter" 
                                      ContentTemplate="{TemplateBinding ContentTemplate}" 
                                      Content="{TemplateBinding Content}" 
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      Margin="{TemplateBinding Padding}" 
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

  
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Column definitions for buttons and tilte/icon -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

       <!--Buttons, title, and icon-->
        <Image Width="70" VerticalAlignment="Center">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="/Images/swan.png" />
            </Image.Source>
        </Image>
        <TextBlock Grid.Column="1" Text="SWAN" VerticalAlignment="Center" Foreground="WhiteSmoke" FontFamily="Baskerville, Georgia" FontSize="45"/>
        <Button Grid.Column="3" Content="Index" Style="{StaticResource btn}" Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.IndexView}"/>
        <Button Grid.Column="4" Content="Dashboard" Style="{StaticResource btn}" Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.RMFDashboardView}"/>
        <Button Grid.Column="5" Content="Risk Score" Style="{StaticResource btn}" Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.RiskScoreView}"/>
        <Button Grid.Column="6" Content="History" Style="{StaticResource btn}"  Command="{Binding ChangePageCommand}" CommandParameter="{x:Static local:PageId.HistoryView}"/>
    </Grid>
</UserControl>
