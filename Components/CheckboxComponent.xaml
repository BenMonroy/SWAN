<UserControl x:Class="SWAN.Components.CheckboxComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <CheckBox x:Name="cb1" Grid.Row="0" Margin="5,0,0,0" 
            Content="{Binding CheckboxLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" IsThreeState="{Binding ThreeState, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Checked="HandleCheck" Unchecked="HandleUnchecked" 
            Indeterminate="HandleThirdState" />
        <TextBlock x:Name="text1" Grid.Row="1" Margin="5,0,0,0" />
    </Grid>
</UserControl>