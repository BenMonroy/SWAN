<Application x:Class="SWAN.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SWAN"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="WindowBackgroundColor" Color="#15131C"/>
            <SolidColorBrush x:Key="CardBackgroundColor" Color="#21222D"/>
            <SolidColorBrush x:Key="PrimaryColor" Color="#FF2697FF"/>
            <SolidColorBrush x:Key="SecondaryColor" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="AccentColor" Color="#88B2AC"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>


